<div class="container-fluid">
    <br>
    <div class="jumbotron bg-dark text-light">
        <h1>The Daily Scrape</h1>
        <hr class="my-2">
        <h3>Daily headlines from The Daily Wire</h3>
        <br>
        <a class="btn btn-info btn-lg" href="/scrape" role="button">Scrape the latest headlines</a>
        <a class="btn btn-info btn-lg" href="/savedarticles" role="button">View saved articles</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{#if articles}}
            {{#each articles}}
            <br>
            <div class="Card cardSt">
                <div class="card-header bg-secondary text-light">
                    <h3 class="art-title">{{this.title}}
                        <button data-title="{{this.title}}" data-link="{{this.link}}" id={{_id}}
                            onclick="buttonHandler(this, '{{_id}}')" type="button"
                            class="btn btn-primary sv">save</button>
                    </h3>
                </div>

                <div class="card-body bg-light">
                    <a href={{link}} target="_blank">{{this.link}}</a>
                    <p class="card-text">{{this.summary}}</p>
                </div>
            </div>
            <br>
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>